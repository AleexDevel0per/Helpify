<div class="flex flex-col items-center space-y-2">

  <%- if controller_name != 'sessions' %>
    <%= link_to "Já tem uma conta? Entrar", new_session_path(resource_name), class: "font-medium text-indigo-400 hover:text-indigo-300 hover:underline transition-colors" %><br />
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Não tem uma conta? Cadastrar-se", new_registration_path(resource_name), class: "font-medium text-indigo-400 hover:text-indigo-300 hover:underline transition-colors" %><br />
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: "font-medium text-indigo-400 hover:text-indigo-300 hover:underline transition-colors" %><br />
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Não recebeu o e-mail de confirmação?", new_confirmation_path(resource_name), class: "font-medium text-indigo-400 hover:text-indigo-300 hover:underline transition-colors" %><br />
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Não recebeu as instruções de desbloqueio?", new_unlock_path(resource_name), class: "font-medium text-indigo-400 hover:text-indigo-300 hover:underline transition-colors" %><br />
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Entrar com #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "font-medium text-indigo-400 hover:text-indigo-300 hover:underline transition-colors" %><br />
    <% end %>
  <% end %>

</div>