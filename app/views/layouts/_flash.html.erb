<% if flash.present? %>
  <div class="absolute top-5 right-5 w-full max-w-sm z-50">
    <% flash.each do |type, message| %>
      <%# Mapeia o tipo de flash para cores e Ã­cones do Tailwind CSS %>
      <% case type.to_s %>
      <% when 'notice', 'success' %>
        <% color_classes = "bg-green-100 border-green-400 text-green-700" %>
        <% icon = "bi-check-circle-fill" %>
      <% when 'alert', 'error' %>
        <% color_classes = "bg-red-100 border-red-400 text-red-700" %>
        <% icon = "bi-exclamation-triangle-fill" %>
      <% else %>
        <% color_classes = "bg-blue-100 border-blue-400 text-blue-700" %>
        <% icon = "bi-info-circle-fill" %>
      <% end %>

      <div class="border-l-4 p-4 my-2 rounded-md shadow-lg <%= color_classes %>" role="alert">
        <div class="flex items-center">
          <div class="py-1">
            <i class="bi <%= icon %> text-xl mr-3"></i>
          </div>
          <div>
            <p class="font-bold"><%= message %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>